  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarTogglerDemo03', aria-controls='navbarTogglerDemo03', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      a.navbar-brand(href='#') BOOKSTORE
      #navbarTogglerDemo03.collapse.navbar-collapse
        ul.navbar-nav.mr-auto.mt-2.mt-lg-0
          li.nav-item.active
            a.nav-link(href='/')
              | Home 
              span.sr-only (current)
          li.nav-item
            a.nav-link(href='/books') Book
          li.nav-item
            a.nav-link(href='/users') Users
          li.nav-item
            a.nav-link(href='/transactions') Transactions  
          li.nav-item
              a.nav-link(href='/cart') Cart  
      if user
        .d-flex.align-items-center.dropdown
          a.cart(href="/cart")
            img.nav-link(src="https://cdn.glitch.com/1eeeaa03-4c95-4acc-925a-ac933fed2ce6%2Fsupermarket.svg?v=1587797125082", style="height:30px; width:20px; padding:0")
            span.count= countBooks === undefined ? '' : countBooks
          a.nav-link.dropdown-toggle#dropdownMenuButton(role="button",data-toggle="dropdown", aria-haspopup="true", aria-expanded="false")
            span= user.name 
              if isAdmin 
                span -Admin
            img.icon-user.m-1(id='avatar-icon' src=user.avatar ? user.avatar : 'https://i.ya-webdesign.com/images/default-avatar-png-6.png', alt="Avatar")    
          .dropdown-menu
            a.dropdown-item(href="/profiles") Thông tin
            a.dropdown-item(href="/auth/logout") Đăng xuất
      if !user
        .btn-group
          a.cart.m-1(href="/cart")
            img.nav-link(src="https://cdn.glitch.com/1eeeaa03-4c95-4acc-925a-ac933fed2ce6%2Fsupermarket.svg?v=1587797125082", style="height:30px; width:20px; padding:0")
            span.count= countBooks === undefined ? "" : countBooks
          a.btn(href="/auth/login", role="button") Đăng nhập  
    .container.p-5
      block content
    block footer  
    