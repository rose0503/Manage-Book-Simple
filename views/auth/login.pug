extends ../layout/common.pug
block content
  .container.mt-2
    h2.mb-4.d-flex.justify-content-center Login
    
    if errors
      each error in errors
        .alert.alert-danger= error
        
    form(action="/auth/login", method="POST")
      .form-group.row
        lable(for="email", class="col-sm-2 col-form-label") Email
        .col-sm-10
          input#email(type='text', name="email", class="form-control", value = values ? values.email : "")
      .form-group.row
        lable(for="password", class="col-sm-2 col-form-label") Password
        .col-sm-10
          input#password(type='password', name="password", class="form-control" value = values ? values.password : "")
      .d-flex.justify-content-center
        button.m-auto(type="submit", class="btn btn-primary mr-3") Đăng nhập
      

