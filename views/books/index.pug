extends ../layout/common.pug
block content
  .container.mt-2
    .d-flex.justify-content-between
      h2.mb-4 Danh sách
      if isAdmin
        a.h-25(href='/books/create', class="btn btn-primary btn-md", role="button", aria-pressed="true") Thêm mới
    
    .table-responsive
      table.table.table-hover
        thead.thead-light
          tr
            th Tên
            th(colspan="3") Action
        tbody    
          each book in books
            tr    
              td=book.title
              if isAdmin
                td 
                  a.btn.btn-light(href="/books/" + book.id) Chi tiết
                td
                  a.btn.btn-light(href="/books/" + book.id + "/edit") Sửa
                td
                  a.btn.btn-light(href="/books/" + book.id + "/delete") Xóa
              if !isAdmin
                td 
                  a.btn.btn-light(href="/books/" + book.id) Chi tiết
    .row
      each book in books
        .col-sm-6.col-md-4.col-lg-3
          .card(style='width: 18rem;')
            img.card-img-top(src=book.coverUrl ? book.coverUrl : 'https://i.ya-webdesign.com/images/default-avatar-png-6.png',alt='Book-image')
            .card-body
              h5.card-title Card title
              p.card-text
                | Some quick example text to build on the card title and make up the bulk of the card&apos;s content.
              a.btn.btn-primary(href='#') Th

                  
    a(href="/") Home