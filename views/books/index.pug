extends ../layout/common.pug
block content
  .container.mt-2
    .d-flex.justify-content-between
      h2.mb-4 Danh sách 
      a.mt-2(href="/books/create") Thêm mới
      a.border-box(href="/", class="btn btn-secondary btn-md", role="button", aria-pressed="true") Thêm mới
    table(style='width:100%')
      tr
        th Tên
        th Action
      each book in books
        tr    
          td=book.title
          td
            a(href="/books/" + book.id) Chi tiết
          td
            a(href="/books/" + book.id + "/edit") Sửa
          td
            a(href="/books/" + book.id + "/delete") Xóa
    a(href="/") Home