extends ../layout/common.pug
block content
  .div
    .d-flex.justify-content-between
      h2.mb-4 Thư viện sách
      if isAdmin
        a.h-25(href='/books/create', class="btn btn-primary btn-md", role="button", aria-pressed="true") Thêm mới
    
    
    .row
      each book in books
        .col-sm-6.col-md-4.col-lg-3
          .card.mb-3(style='width: 250px')
            img.card-img-top.m-1(style='width: 200px',src=book.coverUrl ? book.coverUrl : 'https://icons.iconarchive.com/icons/thalita-torres/office/512/school-book-icon.png',alt='Book-image')
            .card-body
              h5.card-title(style="height: 48px !important")=book.title
              p.card-text                  
                .text-truncate(style='width: 180px')
                  span=book.description                
              
              if isAdmin   
                .row                  
                    a.btn.btn-primary.m-1(href='/cart/add/'+ book.id) Add
                    a.btn.btn-primary.m-1(href="/books/" + book.id) Chi tiết
                    a.btn.btn-primary.m-1(href="/books/" + book.id + "/edit") Sửa                
                    a.btn.btn-primary.m-1(href="/books/" + book.id + "/delete") Xóa
              if !isAdmin                 
                .row                  
                    a.btn.btn-primary.m-1(href='/cart/add/'+ book.id) Add to cart
                    a.btn.btn-primary.m-1(href="/books/" + book.id) Chi tiết


                  
    a(href="/") Home