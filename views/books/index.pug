extends ../layout/common.pug
block content
  .container.mt-2
    h2.mb-4.d-flex.justify-content-center Danh sách 
    a(href="/books/create") Thêm mới
    table(style='width:100%')
      tr
        th Tên
        th Action
      each book in books
        tr    
          td=book.title
          td
            a(href="/books/" + book.id) Chi tiết
          td
            a(href="/books/" + book.id + "/edit") Sửa
          td
            a(href="/books/" + book.id + "/delete") Xóa
    a(href="/") Home